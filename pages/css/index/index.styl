#sticky-wrapper
  background #fff
  width 100%
  height 2000px
  .wrapper-header
    width 100%
    height 70px
    .header-content
      margin 0 auto
      width 87%
      height 100%
      display flex
      justify-content space-between
      align-items center
      .header-logo
        width: 280px
        height 40px
      .header-nav
        height 100%
        width 70%
        display flex
        justify-content space-between
        align-items center
        line-height 100%
        .nav-address
          display flex
          flex 1
          a
            img
              display block
          .address-city
            font-size 17px
            color #121212
            font-weigh bold
          .switch-city
            font-size 17px
            color #121212
            font-weigh bold
            padding-left 5px
        .nav-menu
          flex 3
          .menu-list
            display flex
            justify-content: space-between
            .menu-item
              a
                font-size 16px
                font-weight bold
                color #121212
                transition color .5s
              a:hover
                color red
              .shouye
                color red
              .login
                color #fff
                background red
                padding 2px 3px
                border-radius 3px
              .login:hover
                color #fff
  .wrapper-content
    width 100%
    height 420px
    .swiper-container
      .swiper-wrapper
        height 100%
        .swiper-slide
          height 420px
          background-size cover
          background-position 50% 50%
        .s1
          background-image url("http://www.daoway.cn/pcimages/banner1.jpg")
        .s2
          background-image url("http://www.daoway.cn/pcimages/banner2.jpg")
        .s3
          background-image url("http://www.daoway.cn/pcimages/banner3.jpg")
      .swiper-pagination-bullet
        background #7e8c8d
        width 10px
        height 10px
      .swiper-pagination-bullet-active
          background #fff
          width 10px
          height 10px
    .servicebody
      width 100%
      height 496px
      .servicebody
        width 100%
        padding-top 50px
        .service-title
          color #121212
          font-size 30px
          font-weight bold
          text-align center
        .service-type
          margin-top 15px
          text-align center
          box-sizing border-box
          a
            font-size 22px
            color #3d3838
            padding 0 5px
        .shopList
          width 87%
          margin 30px auto 0
          display flex
          justify-content space-between
          a
            .shopItem
              display flex
              flex-direction column
              img
                width 210px
                height 210px
              .serviceName
                font-size 16px
                font-weight 800
                padding 10px 0
                color #000
                white-space nowrap
                text-overflow ellipsis
              .description
                color #929292
                padding 5px 0
                font-size 13px
              .price
                .price-detail
                  font-size 20px
                  line-height 20px
                  color red
                .price-text
                  font-size 16px
                  color red