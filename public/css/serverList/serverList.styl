#server-wrapper
  width 100%
  position relative
  height 20000
  background #fbf8f8
  .wrapper-header
    width 100%
    height 70px
    background #fff
    .header-content
      margin 0 auto
      width 87%
      height 100%
      display flex
      justify-content space-between
      align-items center
      .header-logo
        width 280px
        height 40px
      .header-nav
        height 100%
        width 70%
        display flex
        justify-content space-between
        align-items center
        line-height 100%
        .nav-address
          display flex
          flex 1
          a
            img
              display block
          .address-city
            font-size 17px
            color #121212
            font-weigh bold
          .switch-city
            font-size 17px
            color #121212
            font-weigh bold
            padding-left 5px
        .nav-menu
          flex 3
          .menu-list
            display flex
            justify-content space-between
            .menu-item
              a
                font-size 16px
                font-weight bold
                color #121212
                transition color .5s
              ahover
                color red
              .shouye
                color red
              .login
                color #fff
                background red
                padding 2px 3px
                border-radius 3px
              .loginhover
                color #fff
  .server-wrapper
    width 100%
    .content-wrapper
      width 90%
      margin 0 auto
      .server-title
        width 100%
        height 85px
        line-height 85px
        font-size 18px
        font-weight bold
      .server
        display flex
        .server-list
          flex 4
          width 100%
          display flex
          flex-wrap wrap
          a
            flex 0 0 25%
            width 25%
            display block
            .shopItem
              display flex
              flex-direction column
              align-items flex-start
              padding 10px
              margin 0 auto 10px
              box-sizing border-box
              border 1px solid #eaeaea
              background #fff
              height 300px
              margin-right 5px
              >img
                width 210px
                height 210px
                display block
              .serviceName
                font-size 16px
                font-weight 800
                color #000
                white-space nowrap
                text-overflow ellipsis
                margin-top 15px
                height 26px
                line-height 26px
                .server-img
                  width 18px
                  height 17px
                  vertical-align middle
                .server-text
                  font-weight 700
              .server-order
                height 26px
                width 100%
                line-height 26px
                display flex
                justify-content space-between
                >span
                  color #929292
                  font-size 12px
            .shopItemhover
              box-shadow 5px 5px 15px #ccc
        .server-advertisement
          flex 1
          display flex
          flex-direction column
          a
            display block
            .adver-container
              width 100%
              height 100%
              >img
                width 230px
                height 300px
            .adver2
              width 230px
              height 300px
              background-image url("http://www.daoway.cn/pcimages/tuijianfuwushang_06.jpg")
              background-repeat no-repeat
              background-position center center
              background-size 230px 300px
              margin-top 10px
              overflow hidden
              //border 1px solid transparent
              >img
                display block
                width 130px
                height 130px
                margin 50px 0 0 50px
            .adver-containerhover
              box-shadow 5px 5px 15px #ccc
      .getServiceList
        height 152px
        width 80%
        text-align center
        line-height 152px
        .moreShops
          width 200px
          height 50px
          line-height 50px
          border 1px solid #e5e5e5
          border-radius 5px
          margin 50px 5px
          background #fff
          display inline-block
          font-size 16px
          color #b1b1b1
          cursor pointer

    .baozhang
      width 100%
      height 148px
      background #fff
      padding-top 60px
      text-align center
      .baozhang-title
        font-size: 30px;
        font-family: "微软雅黑";
        font-weight: 800;
        span
          color #fb474f
          font-size: 30px;
          font-family: "微软雅黑";
          font-weight: 800;
      p
        font-size: 22px;
        color: #3d3838;
        padding-top 10px
      .servi
        padding-top 20px
        .servi-list
          width 100%
          display flex
          justify-content center
          .servi-item
            display flex
            justify-content center
            margin-right 25px
            img
              display block
            span
              padding-left 3px
              font-size 18px
    .footerContainer
      width 100%
      background #ffffff
      height 120px
      padding-top 50px
      .footer-city
        margin 0 auto
        width 87%
        display flex
        .hotCity
          flex 1
          font-size 19px
          font-weight 800
        .citiesName
          flex 9
          display flex
          justify-content space-around
          width 100%
          flex-wrap wrap
          align-content space-between
          a
            flex 0 0 9%
            width 9%
            color #898989
            font-size 16px
            font-weight 200
            font-family "微软雅黑"
            height 30px
    .copy
      width 87%
      margin 0 auto
      height 40px
      line-height 40px
      color #898989
      font-size 16px

